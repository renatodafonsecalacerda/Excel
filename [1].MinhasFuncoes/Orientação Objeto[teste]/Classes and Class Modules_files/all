function scrollToAnchor(n){var t=jQuery(n);jQuery("html,body").animate({scrollTop:t.offset().top},"slow")}$(".link").click(function(n){n.preventDefault();scrollToAnchor($(this).attr("href"))});$(".our-courses a").on("click",function(){$(".our-courses__dropdown").toggleClass("our-courses__dropdown--active")});$(".mobile-menu").on("click",function(){$(".top-menu").toggleClass("top-menu--active")});var distance=$(".sticky").offset().top-100,$window=$(window);$window.scroll(function(){$window.scrollTop()>=distance?$(".sticky").addClass("sticky--fixed"):$(".sticky").removeClass("sticky--fixed")})